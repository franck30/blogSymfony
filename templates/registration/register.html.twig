{% extends 'base.html.twig' %}

{#{% block title %}Register{% endblock %}#}

{% form_theme registrationForm _self %}

{#{% block form_start %}#}
{#	<form method="post" class="getin_form border-form" id="login">#}
{#{% endblock %}#}

{#{% block textarea_widget %}#}

